{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": "off",
    "max-line-length": "off",
    "not-rely-on-time": "off",
    "avoid-low-level-calls": "error",
    "avoid-call-value": "error",
    "avoid-tx-origin": "error",
    "check-send-result": "error",
    "func-name-mixedcase": "off",
    "var-name-mixedcase": "off",
    "const-name-snakecase": "off",
    "modifier-name-mixedcase": "off",
    "event-name-camelcase": "off",
    "use-forbidden-name": "error",
    "visibility-modifier-order": "off",
    "no-empty-blocks": "warn",
    "no-unused-vars": "off",
    "payable-fallback": "error",
    "no-complex-fallback": "error",
    "reason-string": "off",
    "constructor-syntax": "error",
    "quotes": "off",
    "no-console": "off",
    "state-visibility": "error",
    "max-states-count": "off",
    "reentrancy": "error",
    "avoid-sha3": "warn",
    "gas-custom-errors": "off",
    "gas-strict-inequalities": "off",
    "gas-small-strings": "off",
    "gas-struct-packing": "off",
    "gas-indexed-events": "off",
    "gas-increment-by-one": "off",
    "gas-calldata-parameters": "off",
    "use-natspec": "off",
    "no-global-import": "off",
    "function-max-lines": "off",
    "no-empty-blocks": "off",
    "no-inline-assembly": "warn"
  }
}
