# 私钥（不要提交真实私钥到 Git！）
PRIVATE_KEY=your_private_key_here

# Etherscan API Key（用于验证合约）
ETHERSCAN_API_KEY=your_etherscan_api_key

# Telegram 告警配置（可选）
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# 已部署的合约地址（部署后填写）
DIAP_TOKEN_ADDRESS=
DIAP_NETWORK_ADDRESS=
DIAP_PAYMENT_CORE_ADDRESS=
DIAP_PAYMENT_CHANNEL_ADDRESS=
DIAP_PAYMENT_PRIVACY_ADDRESS=
DIAP_GOVERNANCE_ADDRESS=
DIAP_VERIFICATION_ADDRESS=

# RPC URLs（可选，如果不使用 Hardhat 默认的）
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# 监控配置
HEALTH_CHECK_INTERVAL=300000  # 5分钟（毫秒）
ALERT_THRESHOLD_BALANCE_DROP=10  # 余额下降 10% 告警
ALERT_THRESHOLD_LARGE_TRANSFER=100000  # 大额转账告警（DIAP）
